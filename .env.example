# Binance Portfolio Logger Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# BINANCE API CREDENTIALS
# =============================================================================
# Your Binance API key (read-only permissions recommended)
BINANCE_API_KEY=your_binance_api_key_here

# Your Binance API secret
BINANCE_API_SECRET=your_binance_api_secret_here

# Binance API base URL (leave default unless using testnet)
BINANCE_API_URL=https://api.binance.com

# =============================================================================
# GOOGLE SHEETS CONFIGURATION
# =============================================================================
# Path to your Google Service Account JSON file
GOOGLE_SERVICE_ACCOUNT_PATH=/opt/binance-portfolio-logger/credentials/service-account.json

# Your Google Spreadsheet ID (found in the URL)
GOOGLE_SPREADSHEET_ID=your_google_sheet_id_here

# Name of the sheet tab to write to
GOOGLE_SHEET_NAME=Binance Portfolio

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Main application log file path
LOG_FILE_PATH=/var/log/binance-portfolio/portfolio.log

# Error log file path
ERROR_LOG_PATH=/var/log/binance-portfolio/errors.log

# Metrics log file path
METRICS_LOG_PATH=/var/log/binance-portfolio/metrics.log

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# EXECUTION CONFIGURATION
# =============================================================================
# Maximum execution timeout in seconds
EXECUTION_TIMEOUT=60

# Maximum number of API retry attempts
MAX_RETRIES=3

# Base delay for exponential backoff (seconds)
RETRY_BASE_DELAY=1

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
# Enable/disable detailed asset breakdown logging (true/false)
LOG_ASSET_BREAKDOWN=true

# Minimum asset value threshold in USDT (assets below this are ignored)
MIN_ASSET_VALUE_THRESHOLD=0.01

# Enable/disable performance metrics collection (true/false)
COLLECT_METRICS=true

# Email notifications for critical errors (optional)
# NOTIFICATION_EMAIL=your-email@example.com
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-smtp-username
# SMTP_PASSWORD=your-smtp-password